---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Changelog - Sketch Nomad App Updates & Version History',
  description: 'The official changelog for the Sketch Nomad app, detailing all updates and version history.',
  keywords:
    'sketch nomad changelog, app updates, version history, release notes, plein air app improvements, new features',
};

const releases = [
  {
    version: '1.0.0-beta',
    date: '2025-08-08',
    type: 'Pilot Release',
    changes: [
      'Launched artist profiles with secure authentication using Google Sign-In and email OTP.',
      'Introduced a gallery of historical artist profiles for inspiration.',
      'Users can now create sketch records complete with location tagging.',
      'Enhanced map view with sketch marker clustering for easier navigation.',
      'Added map filters to view sketches by artist or city.',
    ],
  },
];
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Version History"
    title="Sketch Nomad Changelog"
    subtitle="A log of changes and improvements to the Sketch Nomad app."
  />

  <!-- Full Width Changelog Section -->
  <section class="py-16 md:py-20 bg-gray-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">

      <div class="space-y-8">
        {
          releases.map((release) => (
            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 bg-white dark:bg-gray-800 shadow-sm">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <span class="text-2xl font-bold text-primary-600 dark:text-primary-400">v{release.version}</span>
                  <span
                    class={`px-3 py-1 rounded-full text-sm font-medium ${
                      release.type === 'Major Release'
                        ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                        : release.type === 'Major Update'
                          ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
                          : release.type === 'Feature Update'
                            ? 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
                            : release.type === 'Minor Update'
                              ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                              : 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200'
                    }`}
                  >
                    {release.type}
                  </span>
                </div>
                <time class="text-gray-500 dark:text-gray-400 text-sm">{release.date}</time>
              </div>
              <ul class="space-y-2">
                {release.changes.map((change) => (
                  <li class="flex items-start space-x-2">
                    <span class="text-primary-600 dark:text-primary-400 mt-1">â€¢</span>
                    <span class="text-gray-700 dark:text-gray-300">{change}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Development Process Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-base text-primary-600 dark:text-primary-400 font-semibold tracking-wide uppercase mb-2">
            Development Process
          </p>
          <h3 class="text-3xl font-bold tracking-tight dark:text-white mb-6">How We Build Sketch Nomad</h3>
          <p class="text-lg text-gray-600 dark:text-slate-400 mb-8">
            We believe in keeping our users informed about every change and improvement. This changelog represents our
            commitment to transparency and continuous enhancement of the Sketch Nomad experience.
          </p>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div
                class="flex-shrink-0 w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center"
              >
                <span class="text-primary-600 dark:text-primary-400 text-sm font-semibold">1</span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Community Feedback</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  We listen to our users and prioritize features based on real needs from the plein air painting
                  community.
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div
                class="flex-shrink-0 w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center"
              >
                <span class="text-primary-600 dark:text-primary-400 text-sm font-semibold">2</span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Agile Development</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  Regular release cycles ensure you get new features and improvements quickly and reliably.
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div
                class="flex-shrink-0 w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center"
              >
                <span class="text-primary-600 dark:text-primary-400 text-sm font-semibold">3</span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Quality Assurance</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  Thorough testing on multiple devices and platforms before each release to ensure stability.
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div
                class="flex-shrink-0 w-8 h-8 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center"
              >
                <span class="text-primary-600 dark:text-primary-400 text-sm font-semibold">4</span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Continuous Improvement</h4>
                <p class="text-gray-600 dark:text-gray-400">
                  Regular performance optimizations and bug fixes to keep the app running smoothly.
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <img
            src="https://images.unsplash.com/photo-1593720213428-28a5b9e94613?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Software development and coding"
            class="rounded-lg shadow-lg w-full h-auto"
          />
          <div class="absolute inset-0 bg-green-50 dark:bg-slate-800 opacity-10 rounded-lg"></div>
        </div>
      </div>
    </div>
  </section>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Launch',
        href: 'https://sketchnomad.app',
        target: '_blank',
        icon: 'tabler:external-link',
      },
      {
        variant: 'secondary',
        text: 'View Roadmap',
        href: '/roadmap',
        icon: 'tabler:map',
      },
    ]}
  >
    <Fragment slot="title"> Always Up to Date </Fragment>

    <Fragment slot="subtitle">
      Make sure you're using the latest version of Sketch Nomad web app to enjoy all the newest features and improvements for
      your plein air painting adventures.
    </Fragment>
  </CallToAction>
</Layout>
